rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid != null;
    }
    // Правила для колекції gameRooms (для запитів)
    match /gameRooms/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid != null;
      allow update: if request.auth != null && request.auth.uid != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    match /finished_games/{gameId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid != null;
      allow update: if request.auth != null && request.auth.uid != null;
      allow delete: if false; // Не дозволяємо видалення завершених ігор
    }
    // Правила для повідомлень чату в кімнатах
    match /gameRooms/{roomId}/messages/{messageId} {
      // Читати можуть всі авторизовані користувачі (учасники кімнати перевіряються на клієнті)
      allow read: if request.auth != null;
      // Писати можуть тільки авторизовані користувачі, і userId має відповідати
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      // Видаляти можуть тільки авторизовані користувачі свої повідомлення
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
  }
}
